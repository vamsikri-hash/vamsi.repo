<section class="cp-page">
<button type="button" class="btn btn-outline-primary"><a href="<%=blog_posts_path%>">Back To Blog</a></button>

<h2 class="hd-hd">Create a New Post</h2>
<div class="hr-line"></div>
<%= form_for(@blog_post) do |f| %>
  <div class="form-group size">
    <label>Title</label>
    <%= f.text_field :title, class: "form-control", placeholder: "Title for post"%>
    <br/>
      <label>Content</label>
    <%= f.text_area :content, class: "form-control", rows:10, placeholder: "write the content"%>
    <br/>
    <%= f.submit text: "Post", class: "btn btn-success"%>
  </div>
<% end %>
</section>
